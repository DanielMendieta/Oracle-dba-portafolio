--RECOMENDADO PARA FUTURA EXTENSIÃ“N

CREATE TABLESPACE ts_datos
DATAFILE '/u01/app/oracle/oradata/DB/ts_datos01.dbf' SIZE 100M
AUTOEXTEND ON NEXT 10M MAXSIZE 1G
EXTENT MANAGEMENT LOCAL;
